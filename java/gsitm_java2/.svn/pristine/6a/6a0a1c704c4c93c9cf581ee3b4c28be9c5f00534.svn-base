public class Tiger_1044 {
	public static boolean flag = false;

	public void checkLion(Tiger_1044 tiger) {
		if (tiger.flag == true) {
			flag = false;
			System.out.println("호랑이는 밥을 밥을 먹었단다, 주지말자, 호랑이 체크값 : " + tiger.flag);
		} else {
			flag = true;
			System.out.println("호랑이는 밥을 먹지 않았단다, 주자, 호랑이 체크값 : " + tiger.flag);
		}
	}

}
