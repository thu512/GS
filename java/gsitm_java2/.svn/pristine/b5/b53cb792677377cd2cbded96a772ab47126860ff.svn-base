public class Person_1049 {
	
	
	public static void main(String[] args) {		
		 
		if( lion_1049.eat==true) {
			System.out.println("사자가 밥을 먹었다");
		}else {
			System.out.println("사자가 밥을 먹지 않았다");
			 feedLion();
		};
		
		if( tiger_1049.eat==true){
			System.out.println("호랑이가 밥을 먹었다");
		}else {
			System.out.println("호랑이가가 밥을 먹지 않았다");
			feedTiger();
		};		
	}
	public static void feedTiger() {
		tiger_1049.eat = true;
		System.out.println("그래서 호랑이에게 밥을 먹여서 호랑이가 맛있게 밥을 먹었다.");
	}
	public static void feedLion() {
		lion_1049.eat =true;
		System.out.println("그래서 사자에게 밥을 먹여서 사자가 맛있게 밥을 먹었다.");
	}

}
