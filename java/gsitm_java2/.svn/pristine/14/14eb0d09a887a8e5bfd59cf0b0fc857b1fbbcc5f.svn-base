package com.gsitm.java.ex05;

public class RemoteCon_1039 {
	Tv_1039 tv;
	
	public RemoteCon_1039(Tv_1039 tv) {
		this.tv = tv;
	}
	
	public boolean turnOn() {
		this.tv.power = true;
		System.out.println("tv 전원을 켰습니다.");
		return this.tv.power;
	}
	
	public boolean turnOff() {
		this.tv.power = false;
		System.out.println("tv 전원을 껐습니다.");
		return this.tv.power;
	}
}
