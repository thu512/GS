package com.gsitm.java.ex05;

public class RemoteCon_1042 {
	
	Tv_1042 tv = new Tv_1042();
	
	public void onoffTv(boolean set){
		tv.setSet(set);
	}
	
	public void status() {
		if(tv.isSet()) {
			System.out.println("TV가 켜져있습니다.");
		}else {
			System.out.println("TV가 꺼져있습니다.");
		}
	}
	
}
