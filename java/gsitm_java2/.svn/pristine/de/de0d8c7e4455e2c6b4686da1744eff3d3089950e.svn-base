	public void feeding() {
		if(!Meal_1028.lion){ //밥을 먹지 않았으면
			System.out.println("사자 : 밥 먹지 않은 상태");
			Meal_1028.lion=true;
			System.out.println("사자 : 밥 먹임");
		}else if(Meal_1028.lion) //밥을 먹었으면 
			System.out.println("사자 밥 먹은 상태");
		
		if(!Meal_1028.tiger){ //밥을 먹지 않았으면
			System.out.println("호랑이 : 밥 먹지 않은 상태");
			Meal_1028.tiger=true;
			System.out.println("호랑이 : 밥 먹임");
		}else if(Meal_1028.tiger) //밥을 먹었으면 
			System.out.println("호랑이 밥 먹은 상태");
	}
	
